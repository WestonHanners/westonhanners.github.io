<section class="content">
<article>
<h1 class="article-title"><a href={{ post.url }}>{{ post.title }}</a></h2>
{% if post.date %}
<div class="date-line">Published on {{ post.date | date_to_string: "ordinal", "US" }}</div>
{% endif %}
<div>{{ post.content }}</div>
</article>
<hr class="article-divider" />
</section>